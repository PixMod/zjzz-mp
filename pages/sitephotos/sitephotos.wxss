/* pages/sitephotos/sitephotos.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  padding: 200rpx 0 48rpx 0;
  display: block;
}

.bg-layer {
  position: fixed; top: 0; left: 0;
  width: 100%; height: 100%;
  z-index: -2;
}

/* 返回按钮区域 */
.nav-back {
  position: absolute;
  left: 32rpx;
  display: flex;
  align-items: center;
  z-index: 101;
  opacity: 0.9;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.nav-back text {
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 2rpx;
}

/* 列表区域 */
.photo-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 12rpx;
  padding-top: 12rpx; /* 避开顶部导航 */
}

.photo-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.photo-item {
  width: 100%;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(169, 206, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
}

.site-img {
  width: 100%;
  display: block;
  min-height: 400rpx;
  background-color: #1a1a1a; /* 图片加载前的占位色 */
}