/* 补充 Swiper 相关样式，单位从 px 转为 rpx (2rpx = 1px) */
.dynamic-bg {
  position: fixed; 
  top: 0; 
  left: 0; 
  width: 100%; 
  height: 100%;
  z-index: -1;
}

.main-swiper { height: 100vh; width: 100%; }

.header-fixed {
  position: fixed; top: 100rpx; left: 0; width: 100%; z-index: 100;
  display: flex; justify-content: center;
}
/* 修改容器样式 */
.grid-title-container {
  position: relative;       /* 关键：为内部绝对定位提供锚点 */
  margin-top: 12rpx;        /* 6px -> 12rpx */
  padding: 24rpx 192rpx;    /* 12px 96px -> 24rpx 192rpx */
  color: white;
  font-size: 36rpx;         /* 14px -> 28rpx */
  letter-spacing: 4rpx;
  white-space: nowrap;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.5);
  display: flex;            /* 确保文字居中 */
  justify-content: center;
  align-items: center;
  /* 删除原来的 background: url(...) */
}

/* 新增：背景图样式 */
.title-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;              /* 关键：置于文字下方 */
}

/* 侧边指示器 */
.side-indicator {
  position: fixed; left: 12rpx; top: 50%; transform: translateY(-50%);
  z-index: 100;
}
.dot {
  width: 12rpx; height: 12rpx; border-radius: 50%;
  border: 1px solid rgba(255,255,255,0.5);
  margin-bottom: 96rpx; position: relative;
  transition: all 0.3s;
}
.dot.active { background: var(--active-dot); border-color: var(--active-dot); transform: scale(1.2); }
/* 连线 */
.dot:not(:last-child)::after {
    content: ''; position: absolute; left: 50%; top: 16rpx;
    height: 80rpx; width: 2rpx; background: rgba(255,255,255,0.2);
    transform: translateX(-50%);
}

/* 卡片样式适配 */
.content-wrapper {
    height: 100%; width: 100%;
    display: flex; flex-direction: column;
    padding: 180rpx 48rpx 120rpx 48rpx; /* 让出头部和底部空间 */
}

.logo-image {
    width: 40pt;
}

.card {
    background: var(--card-bg);
    border: 2rpx solid rgba(169, 206, 255, 0.8);
    border-radius: 16rpx;
    padding: 16rpx;
    color: white;
    /* 小程序不支持 backdrop-filter, 可以用 rgba 背景模拟 */
}
.card-title {
    color: var(--text-gold); font-size: 24rpx; text-align: center; margin-bottom: 12rpx;
}
.card-body {
    font-size: 20rpx; line-height: 1.8; color: rgba(255,255,255,0.9);
    max-height: 800rpx; /* 限制高度内部滚动 */
}