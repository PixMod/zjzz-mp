.bg-container {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  z-index: 0;
  background-color: #000;
  overflow: hidden;
}
.bg-group {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  opacity: 0;
  transition: opacity 1.0s ease-in-out;
  will-change: opacity;
  z-index: 0;
}
.bg-group.show {
  opacity: 1;
  z-index: 1;
}
.bg-layer {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  transition: all 1s ease-in-out;
}
.bg-layer.blur {
  filter: blur(10rpx);
  transform: scale(1);
  opacity: 0.618;
}
.bg-layer.origin {
  z-index: 2;
  opacity: 1;
  transform: scale(1);
}
.bg-layer.origin.lift-up {
  top: -10%;
}
.bg-group.preview-mode .bg-layer.blur {
  filter: blur(0px) !important;
  opacity: 1 !important;
  transform: scale(1) !important;
}
.bg-group.preview-mode .bg-layer.origin {
  opacity: 0 !important;
  transform: scale(2);
}


.dynamic-bg {
  position: absolute; 
  top: 0; left: 0; width: 100%; height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  z-index: 0;
  opacity: 0;
  transition: opacity 1.0s ease-in-out;
  will-change: opacity;
}
.dynamic-bg.show {
  opacity: 1;
  z-index: 1;
}
.main-swiper { height: 100vh; width: 100%; }
.side-indicator {
  position: fixed; left: 24rpx; top: 38%; transform: translateY(-50%);
  z-index: 100;
}
.dot {
  width: 12rpx; height: 12rpx; border-radius: 50%;
  border: 1px solid rgba(255,255,255,0.5);
  margin-bottom: 96rpx; position: relative;
  transition: all 0.3s;
}
.dot.active { background: var(--active-dot); border-color: var(--active-dot); transform: scale(1.2); }
.dot:not(:last-child)::after {
    content: ''; position: absolute; left: 50%; top: 16rpx;
    height: 80rpx; width: 2rpx; background: rgba(255,255,255,0.2);
    transform: translateX(-50%);
}
.page-item {
  position: relative;
  height: 100%;
  width: 100%;
  scroll-snap-stop: always;
  scroll-snap-align: start;
  display: flex;
  flex-direction: column;
  padding: 36rpx 48rpx 0rpx 48rpx;
}
.logo-box {
  display: flex; justify-content: center; margin-bottom: 18rpx; background: transparent;
}
.logo-img {
  height: 72rpx; object-fit: contain; 
}
.card {
    flex: 0 0 auto;
    max-height: 100%;
    width: 100%;
    background: var(--card-bg);
    border: 1px solid rgba(169, 206, 255, 0.8);
    border-radius: 8px;
    padding: 8px;
    color: white;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.card-title {
  text-align: center;
  color: var(--text-gold);
  font-size: 33rpx;
  letter-spacing: 6rpx;
}
.card-title-focus {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 15%;
  font-size: 33rpx;
  color: var(--text-gold);
  letter-spacing: 6rpx;
  font-weight: bold;
}
.card-body {
    flex: 1;
    min-height: 0;
    font-size: 30rpx;
    line-height: 1.8;
    text-align: justify;
    overflow-y: hidden;
    color: rgba(255,255,255,0.9);
    padding: 12rpx;
    text-indent: 2em;
}
.list-header {
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.list-header image {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  z-index: 0;
}
.list-header text {
  position: absolute;
  z-index: 1;
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-left: -36rpx;
}
.ul, .sub-ul {
  padding-left: 0;
  margin: 12rpx 10rpx;
}
.li {
  position: relative;
  padding-left: 48rpx;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: block;
  text-indent: 0;
}
.li::before {
  content: '';
  position: absolute;
  width: 10rpx; height: 10rpx;
  background: var(--text-gold);
  transform: rotate(45deg);
  left: 24rpx;
  top: 18rpx;
  border-radius: 0;
}
.sub-ul {
  margin-left: 42rpx;
}
.sub-li {
  padding-left: 42rpx;
}
.sub-li::before {
  width: 10rpx; height: 10rpx;
  border: 2rpx solid var(--text-gold);
  border-radius: 50%;
  background: transparent;
  transform: none;
  position: absolute;
  left: 12rpx;
  top: 16rpx;
}
.center-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-indent: 0;
  text-align: center;
  padding-top: 48rpx;
}
.qr-code {
  width: 450rpx;
  height: 450rpx;
  display: block;
  margin-bottom: 20rpx;
}
.hint-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  line-height: 1.5;
}
.contact-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}
.icon-small {
  width: 42rpx;
  height: 42rpx;
  display: block;
}
.manager-name {
  font-size: 36rpx;
  color: var(--text-gold);
  font-weight: bold;
}
.qr-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 100;
}
.swipe-hint-box {
  position: fixed;
  left: 0; 
  width: 100%;
  bottom: calc(144rpx + env(safe-area-inset-bottom));
  z-index: 50;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.5s ease;
}
.swipe-hint-box.show {
  opacity: 1;
  animation: floatUp 1.5s infinite ease-in-out;
}
.swipe-hint-box text {
  font-size: 26rpx;
  font-weight: 900;
  color: #f6c45d;
  letter-spacing: 4rpx;
  text-shadow: 
    2rpx 2rpx 0px #fff, 
    -2rpx 2rpx 0px #fff, 
    2rpx -2rpx 0px #fff, 
    -2rpx -2rpx 0px #fff,
    0px 0px 8rpx rgba(255, 255, 255, 0.8);
}
@keyframes floatUp {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.go-top-btn {
  position: absolute;
  right: 48rpx;
  bottom: 360rpx; 
  width: 120rpx;
  height: 120rpx;
  z-index: 200;
  transition: transform 0.1s;
}

.go-top-btn:active {
  transform: scale(0.9);
}

.go-top-btn image {
  width: 100%;
  height: 100%;
  display: block;
}

