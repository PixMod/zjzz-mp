.dynamic-bg {
  position: fixed; 
  top: 0; left: 0; width: 100%; height: 100%;
  background-position: center bottom;
  background-repeat: no-repeat;
  background-size: cover;
  z-index: 0;
  transition: background-image 0.5s ease-in-out;
}
.main-swiper { height: 100vh; width: 100%; }
.side-indicator {
  position: fixed; left: 24rpx; top: 38%; transform: translateY(-50%);
  z-index: 100;
}
.dot {
  width: 12rpx; height: 12rpx; border-radius: 50%;
  border: 1px solid rgba(255,255,255,0.5);
  margin-bottom: 96rpx; position: relative;
  transition: all 0.3s;
}
.dot.active { background: var(--active-dot); border-color: var(--active-dot); transform: scale(1.2); }
.dot:not(:last-child)::after {
    content: ''; position: absolute; left: 50%; top: 16rpx;
    height: 80rpx; width: 2rpx; background: rgba(255,255,255,0.2);
    transform: translateX(-50%);
}
.page-item {
  position: relative;
  height: 100%;
  width: 100%;
  scroll-snap-stop: always;
  scroll-snap-align: start;
  display: flex;
  flex-direction: column;
  padding: 36rpx 48rpx 0rpx 48rpx;
}
.logo-box {
  display: flex; justify-content: center; margin-bottom: 18rpx; background: transparent;
}
.logo-img {
  height: 72rpx; object-fit: contain; 
}
.card {
    flex: 0 0 auto;
    max-height: 100%;
    width: 100%;
    background: var(--card-bg);
    border: 1px solid rgba(169, 206, 255, 0.8);
    border-radius: 8px;
    padding: 8px;
    color: white;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.card-title {
  text-align: center;
  color: var(--text-gold);
  font-size: 33rpx;
  letter-spacing: 6rpx;
}
.card-title-contact {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 15%;
  font-size: 33rpx;
  color: var(--text-gold);
  letter-spacing: 6rpx;
  font-weight: bold;
}
.title-arrow {
  width: 90rpx;
  height: 36rpx;
  margin-right: 36rpx;
}
.title-arrow.right {
  margin-right: 0;
  margin-left: 36rpx;
  transform: scaleX(-1);
}
.card-body {
    flex: 1;
    min-height: 0;
    font-size: 30rpx;
    line-height: 1.8;
    text-align: justify;
    overflow-y: hidden;
    color: rgba(255,255,255,0.9);
    padding: 12rpx;
    text-indent: 2em;
}
.list-header {
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.list-header image {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  z-index: 0;
}
.list-header text {
  position: absolute;
  z-index: 1;
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-left: -36rpx;
}
.ul, .sub-ul {
  padding-left: 0;
  margin: 12rpx 10rpx;
}
.li {
  position: relative;
  padding-left: 48rpx;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: block;
  text-indent: 0;
}
.li::before {
  content: '';
  position: absolute;
  width: 10rpx; height: 10rpx;
  background: var(--text-gold);
  transform: rotate(45deg);
  left: 24rpx;
  top: 18rpx;
  border-radius: 0;
}
.sub-ul {
  margin-left: 42rpx;
}
.sub-li {
  padding-left: 42rpx;
}
.sub-li::before {
  width: 10rpx; height: 10rpx;
  border: 2rpx solid var(--text-gold);
  border-radius: 50%;
  background: transparent;
  transform: none;
  position: absolute;
  left: 12rpx;
  top: 16rpx;
}
.center-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-indent: 0;
  text-align: center;
  padding-top: 48rpx;
}
.qr-code {
  width: 450rpx;
  height: 450rpx;
  display: block;
  margin-bottom: 20rpx;
}
.hint-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  line-height: 1.5;
}
.contact-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}
.icon-small {
  width: 42rpx;
  height: 42rpx;
  display: block;
}
.manager-name {
  font-size: 36rpx;
  color: var(--text-gold);
  font-weight: bold;
}