.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.bg-layer {
  position: fixed; top: 0; left: 0;
  width: 100%; height: 100%;
  z-index: -2;
}
.decoration-layer {
  z-index: -1;
}
.form-scroll-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 18rpx;
}
.form-wrapper {
  padding: 0 144rpx;
}
.page-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.page-header text {
  font-size: 33rpx;
  color: var(--text-gold);
  font-weight: bold;
  letter-spacing: 6rpx;
}
.form-group {
  margin-bottom: 30rpx;
}
.form-label {
  display: flex;
  align-items: center;
  margin: 12rpx 0 12rpx 0;
}
.label-icon {
  width: 48rpx; height: 48rpx;
}
.form-label text {
  font-size: 30rpx;
  color: white;
  font-weight: bold;
  margin-left: -32rpx;
}
.form-input {
  width: 100%;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(169, 206, 255, 0.9);
  border-radius: 12rpx;
  padding: 0 24rpx;
  color: white;
  font-size: 30rpx;
  box-sizing: border-box;
  margin: 0 24rpx;
}
.ph-color {
  color: rgba(255, 255, 255, 0.4);
}
.coop-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 12rpx;
}
.coop-item {
  position: relative;
  width: 248rpx;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}
.coop-item.active {
  box-shadow: 0 0 10rpx rgba(0, 162, 255, 0.5);
}
.coop-bg {
  position: absolute; top: 0; left: 0;
  width: 100%; height: 100%;
  z-index: 0;
}
.coop-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 100%;
  justify-content: center;
  top: -6rpx;
  left: 14rpx;
}
.coop-icon {
  width: 48rpx; height: 48rpx;
  flex-shrink: 0;
}
.coop-text-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 160rpx; 
  flex-shrink: 0;
}
.coop-title {
  font-size: 30rpx;
  color: white;
  font-weight: bold;
  letter-spacing: 2rpx;
  white-space: nowrap;
}
.coop-desc {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.6);
  white-space: nowrap;
}
.submit-btn {
  position: relative;
  width: 40%; height: 144rpx;
  margin: 60rpx auto 0 auto;
  background: transparent;
  padding: 0;
  display: flex; align-items: center; justify-content: center;
  border: none;
}
.submit-btn::after { border: none; }
.btn-bg {
  position: absolute; top: 0; left: 0;
  width: 100%; height: 100%;
  z-index: 0;
}
.btn-text {
  position: relative; z-index: 1;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}
button.submit-btn[disabled] {
  background: transparent;
  background-color: transparent;
  border: none;
  opacity: 1;
  color: white;
}