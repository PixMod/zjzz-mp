/* 补充 Grid 布局 */
.coop-grid {
  display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx; margin: 12rpx 0;
}
.coop-item {
  /* 背景图需改为网络图或Base64，本地图片不能作为background-image，除非是<image>标签模拟 */
  background-color: rgba(0,0,0,0.3); 
  border: 1px solid rgba(255,255,255,0.2);
  padding: 18rpx 12rpx 30rpx 12rpx;
  display: flex; flex-direction: row; align-items: center; justify-content: center;
  gap: 12rpx;
}
.coop-item.active {
  background-color: rgba(17, 71, 158, 0.6);
  border-color: #00a2ff;
}
.coop-text-box {
    display: flex; flex-direction: column; align-items: flex-start;
}
.coop-title { font-size: 24rpx; color: white; font-weight: bold; }
.coop-desc { font-size: 16rpx; color: rgba(255,255,255,0.6); }

/* 输入框 placeholder 颜色 */
.ph-color { color: rgba(255, 255, 255, 0.4); }

.submit-btn {
   width: 356rpx; height: 108rpx;
   /* 同样，按钮背景图建议用 <image> 绝对定位实现，或者使用网络图片 */
   background: transparent; 
   color: white; 
   display: flex; justify-content: center; align-items: center;
   margin: 40rpx auto;
   background-image: url('https://你的资源路径/submit-button-unpressed.png');
   background-size: 100% 100%;
}
.submit-btn:active {
   background-image: url('https://你的资源路径/submit-button-pressed.png');
}