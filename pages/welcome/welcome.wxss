/* pages/welcome/welcome.wxss */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
}

.fullscreen-swiper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1;
}

.slide-image {
  width: 100%;
  height: 100%;
  display: block;
}

.overlay-logo, .overlay-text, .custom-indicators, .skip-btn {
  position: absolute;
  z-index: 10;
}
.overlay-logo {
  top: 12vh; /* 距离顶部的位置，可微调 */
  left: 50%;
  transform: translateX(-50%); /* 水平居中 */
  height: 72rpx;
}
.overlay-logo image {
  width: auto; height: 100%;
}

.overlay-text {
  top: 30vh; /* 位于屏幕中偏上位置 */
  left: 0; width: 100%;
  text-align: center;
  color: #ffffff;
  /* 尝试使用楷体等衬线字体作为降级，模拟书法感 */
  font-family: "STKaiti", "KaiTi", "Georgia", serif; 
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.6); /* 增加文字立体感和可读性 */
}
.text-line {
  font-size: 48rpx; /* 字号够大才有气势 */
  line-height: 1.6;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.custom-indicators {
  bottom: 176rpx;
  left: 0; width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 48rpx; 
}
.indicator-bar {
  width: 24rpx;  
  height: 24rpx;
  border-radius: 50%; 
  background: rgba(255, 255, 255, 0.4); 
  transition: all 0.3s ease; 
}

.indicator-bar.active {
  width: 48rpx; 
  border-radius: 12rpx; 
  background: #ffffff; 
}

.skip-btn {
  position: absolute;
  /* 适配不同机型的刘海屏，留出顶部安全距离 */
  bottom: calc(env(safe-area-inset-top) + 200rpx);
  right: 40rpx;
  z-index: 100;
  
  background: rgba(0, 0, 0, 0.4); /* 半透明黑底 */
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 10rpx 24rpx;
  
  display: flex;
  align-items: center;
  justify-content: center;
}
.skip-btn text {
  color: #fff;
  font-size: 26rpx;
  letter-spacing: 2rpx;
}