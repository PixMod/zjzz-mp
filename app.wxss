/**app.wxss**/
page {
  --primary-blue: #11479e;
  --active-dot: #ffffff;
  --inactive-dot: rgba(255, 255, 255, 0.3);
  --tab-bg: rgba(17, 71, 158, 0.8);
  --card-bg: rgba(0, 0, 0, 0.2);
  --text-gold: #f6c45d;
  font-family: -apple-system, sans-serif;
  background: #0e2e6b;
  box-sizing: border-box;
}

view, text, image, scroll-view {
  box-sizing: border-box;
}

/* --- 装饰背景 --- */
.decoration-layer {
  position: fixed;
  top: 0; left: 0; width: 100%; height: auto;
  z-index: 1; 
  pointer-events: none;
  transition: opacity 0.5s ease;
}
.hidden { opacity: 0; }

/* --- 顶部固定标题 --- */
.header-fixed {
  position: fixed; top: 72rpx; left: 0; width: 100%; z-index: 100;
  display: flex; justify-content: center;
  transition: opacity 0.3s ease, transform 0.3s ease;
}
.grid-title-container {
  position: relative;
  margin-top: 6rpx;
  padding: 24rpx 176rpx;
  color: white;
  font-size: 36rpx;
  letter-spacing: 6rpx;
  white-space: nowrap;
  text-shadow: 0 6rpx 6rpx rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.title-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;              /* 关键：置于文字下方 */
}

.tab-bar {
  position: fixed; bottom: 0; left: 0; width: 100%; height: 128rpx; 
  display: flex; justify-content: space-around; align-items: center;
  z-index: 999;
}
.tab-bar-bg {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    z-index: -1;
}
.tab-item {
  display: flex; flex-direction: column; align-items: center;
  opacity: 0.6; transition: opacity 0.3s;
  z-index: 10;
}
.tab-item.active { opacity: 1; }
.tab-icon { width: 48rpx; height: 48rpx; }
.tab-text { font-size: 33rpx; color: white; }
.tab-item.active .tab-text { color: var(--text-gold); }

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
