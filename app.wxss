/**app.wxss**/
page {
  --primary-blue: #11479e;
  --active-dot: #ffffff;
  --inactive-dot: rgba(255, 255, 255, 0.3);
  --tab-bg: rgba(17, 71, 158, 0.8);
  --card-bg: rgba(0, 0, 0, 0.25);
  --text-gold: #f6c45d;
  
  height: 100%;
  font-family: -apple-system, sans-serif;
  background: #0e2e6b;
  box-sizing: border-box;
}

view, text, image, scroll-view {
  box-sizing: border-box;
}

.decoration-layer {
  position: fixed;
  top: 0; left: 0; width: 100%; height: auto;
  z-index: 1; 
  pointer-events: none;
  transition: opacity 0.5s ease;
}
.hidden { opacity: 0; }

.tab-bar {
  position: fixed; bottom: 0; left: 0; width: 100%; height: 96rpx; /* 48px * 2 */
  background: rgba(17, 71, 158, 0.8); /* 若背景图无法平铺，可用纯色兜底 */
  backdrop-filter: blur(2px);
  display: flex; justify-content: space-around; align-items: center;
  z-index: 999;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-bar-bg {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    z-index: -1;
}
.tab-item {
  display: flex; flex-direction: column; align-items: center;
  opacity: 0.6; transition: opacity 0.3s;
  z-index: 10;
}
.tab-item.active { opacity: 1; }
.tab-icon { width: 36rpx; height: 36rpx; margin-bottom: 8rpx; }
.tab-text { font-size: 24rpx; color: white; }
.tab-item.active .tab-text { color: var(--text-gold); }

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
